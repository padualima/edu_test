<div data-controller="form-filter">
  <%= form_with(scope: :filter, url: portfolios_path, class: "form-inline d-flex align-items-center justify-content-center pt-3", method: :get) do |form| %>
      <div class="form-floating col-3 col-md-2 mx-2">
        <%= form.select :year_id, options_for_select(@year_groups), { include_blank: true }, { class: "form-select", id: "years_select", aria: { label: "Select year" }, data: { target: "years", action: "change->form-filter#remoteselect" } } %>
        <label>Ano Eleição</label>
      </div>

      <div class="form-floating col-3 col-md-2 mx-2">
        <%= form.select :state_id, options_for_select([]), { include_blank: true }, { class: "form-select", id: "states_select", aria: { label: "Select state" }, data: { form_filter_target: "states"} } %>
        <label>Estado</label>
      </div>

    <div class="m-3 d-flex">
      <%= form.submit "Filtrar", class: "btn btn-outline-primary my-1", id: "btFilter" %>
    </div>
  <% end %>
</div>
